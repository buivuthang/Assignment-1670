@model Assignment.Models.Book

<div class="container col-md-10 text-center mt-3">
    <div class="row">
        <div class="col">
            <img src="@Model.Image" width="300" height="300">
            <h4 class="text text-success">@Model.Title</h4>
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2" class="h3 bg-light text-success">Book Info</th>
                </tr>
                <tr>
                    <th>Publisher</th>
                    <td>@Model.Publisher</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>@Model.Author</td>
                </tr>
                <tr>
                    <th>Year Published</th>
                    <td>@Model.YearPublished</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>$ @Model.Price</td>
                </tr>
                <tr>
                    <th>Mobile Quantity</th>
                    <th>
                        @if (@Model.Quantity == 0)
                        {
                            <p class="font-weight-bold">Out of stock</p> }
                        else
                        {
                            <p>@Model.Quantity</p>}
                    </th>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>
                        <a asp-controller="Category" asp-action="Detail" asp-route-id="@Model.Category.Id">
                            @Model.Category.Name
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>