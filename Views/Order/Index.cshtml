@model ICollection<Order>

<div class="container text-center mt-3">
    @if (@TempData["Message"] != null)
    {
        <p class="alert alert-danger">@TempData["Message"]</p>}
    <table class="table table-bordered">
        <tr>
            <th colspan="4" class="h3 bg-light text-success">Order List</th>
        </tr>
        <tr>
            <th>Order Id</th>
            <th>User ID</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>
                    <a class="font-weight-bold" asp-controller="OrderDetail" asp-action="Index">
                        @order.Total
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning" asp-controller="Category" asp-action="Edit">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </table>
</div>